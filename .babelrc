{
  "presets": [
    "module:metro-react-native-babel-preset"
  ],
  "plugins": [
    [
      "module-resolver", 
      {
      "root": [
        "./src"
      ],
      "alias": {
        "~global": "./src/global",
        "~scenes": "./src/scenes",
        "~navigation": "./src/navigation"
      }
    }]
  ]
}